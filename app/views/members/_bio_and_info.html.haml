%div.overflow-hidden.breakword{ style: "margin-left: 20px;margin-right: 20px;margin-bottom: 0;padding-top: 11px;" }
  - if member.profile_present? || current_user == member
    %strong Bio
    %br
    .small
      - if member.profile_bio.present?
        = simple_markdown(member.profile_bio)
      - elsif current_user == member
        %p= link_to "Add a short bio", settings_profile_path

      - if member.profile_location.present?
        %p
          = icon("fas", "map-marker-alt")
          = member.profile_location
      - elsif current_user == member
        %p
          = icon("fas", "map-marker-alt")
          = link_to "Add a location", settings_profile_path

      - if member.orcidid.present?
        %p.nowrap.overflow-hidden
          = icon("fab", "orcid")
          = link_to "#{member.orcidid}", "https://orcid.org/#{member.orcidid}"

      - if member.profile_url.present?
        %p.nowrap.overflow-hidden
          = icon("fas", "link")
          = link_to member.profile_url, member.profile_url
