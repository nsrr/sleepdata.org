= form_with model: user, local: true do |form|
  = render "forms/horizontal/text_field", form: form, object: user, key: :full_name
  = render "forms/horizontal/email_field", form: form, object: user, key: :email
  = render "forms/horizontal/check_box", form: form, object: user, key: :emails_enabled
  = render "forms/horizontal/text_field", form: form, object: user, key: :username
  = render "forms/horizontal/text_area", form: form, object: user, key: :profile_bio, key_name: "Bio", help_text: "Short description about yourself and your work.", rows: 3, maxlength: 160
  = render "forms/horizontal/text_field", form: form, object: user, key: :profile_url, key_name: "URL", help_text: "Ex: Your online research profile, lab's website, or code repository."
  = render "forms/horizontal/text_field", form: form, object: user, key: :profile_location, key_name: "Location", help_text: "Your city, state, and/or country, ex: Boston, MA, USA, or Sydney, AUSTRALIA"
  = render "forms/horizontal/text_field", form: form, object: user, key: :degree
  = render "forms/horizontal/check_box", form: form, object: user, key: :core_member, key_name: "Core NSRR member", help_text: "This adds the user as a team member on the #{link_to "team page", team_path}.".html_safe
  = render "forms/horizontal/check_box", form: form, object: user, key: :contributor, help_text: "This adds the user as a past contributor on the #{link_to "contributors page", contributors_path}.".html_safe
  = render "forms/horizontal/check_box", form: form, object: user, key: :aug_member, key_name: "AUG member", help_text: "This adds the user as an AUG member on the #{link_to "academic user group page", aug_path}.".html_safe
  = render "forms/horizontal/check_box", form: form, object: user, key: :community_manager, help_text: "Community managers can create blog posts."
  = render "forms/horizontal/check_box", form: form, object: user, key: :admin
  = render "forms/horizontal/text_area", form: form, object: user, key: :research_summary
  = render "forms/horizontal/check_box", form: form, object: user, key: :shadow_banned, help_text: "Hides forum posts by this user."
  = render "forms/horizontal/check_box", form: form, object: user, key: :spammer
  = render "forms/horizontal/submit", form: form, object: user
