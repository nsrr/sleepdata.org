!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=Edge,chrome=1", http: { equiv: "X-UA-Compatible" } }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" }
    = render "layouts/meta/general"
    = render "layouts/meta/facebook"
    = render "layouts/meta/google"
    -# Don't cache any pages
    %meta{ name: "turbolinks-cache-control", content: "no-cache" }
    %title= [@title, ENV["website_name"]].compact.join(" - ")
    = favicon_link_tag
    = auto_discovery_link_tag(:rss, "#{ENV["website_url"]}/blog.atom")
    = csrf_meta_tags
    = render "layouts/fathom_analytics" if Rails.env.production?
    = stylesheet_link_tag "application", media: "all", data: { turbolinks_track: "reload" }
    = javascript_include_tag "application", data: { turbolinks_track: "reload" }
    = javascript_tag "var root_url='#{request.script_name + '/'}';"
  - render("themes/theme") unless @theme
  %body#top.full-page.theme-bg{ class: @theme ? "theme-#{@theme}-bg" : nil, data: { theme: @theme } }
    = render "layouts/staging_server" if STAGING_SERVER
    = render "layouts/service_announcement", container: "container-fluid"
    = render "layouts/flash_bar"
    #top-menu.top-menu= render "layouts/menu", nocontainer: true, menu: @theme ? "menu-#{@theme}" : nil
    .header-container
      .container-fluid
        %h1.page-heading
          = yield :header
          = render "sidebar/toggle"
    = yield :header_append
    - if content_for?(:tabs)
      .header-tabs{ class: "#{"header-tabs-no-breadcrumbs" unless content_for?(:breadcrumbs)}" }
        .container-fluid
          = yield :tabs
    - if content_for?(:breadcrumbs)
      .breadcrumb-container
        .container-fluid
          = yield :breadcrumbs
    .row.no-gutters.flex-md-nowrap
      = yield(:sidebar)
      %main.col.p-3{ role: "main", class: @table_scroll ? "table-overflow-scroll" : nil }
        = yield
    = yield :footer
    = render "layouts/footer", footer: @theme ? "footer-#{@theme}" : nil, container: "container-fluid"
