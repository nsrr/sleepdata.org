- div_classes = []
- div_classes << "footer-container-#{@footer}" if @footer.present?
- div_classes << "theme-#{@theme}-bg" if @theme.present?

.footer-container{ class: div_classes.join(" ") }
  %div{ class: defined?(container) && container.present? ? container : "container" }
    .footer
      .nowrap.row
        .col
          &copy;
          = Time.zone.today.year
          .d-inline.d-md-none= link_to "NSRR", about_path
          .d-none.d-md-inline= link_to "National Sleep Research Resource", about_path

        .col.text-center.d-none.d-sm-block
          - if false
            %small.px-2= link_to "Terms", terms_of_service_path
          %small.px-2= link_to "Privacy", privacy_policy_path

        .col.text-right
          = link_to "Contact Us", contact_path
          |
          = link_to "Funded By NHLBI", about_path
