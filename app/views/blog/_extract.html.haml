.broadcast
  %p
    = strip_tags(simple_markdown(broadcast.description, target_blank: false).gsub(/<h1>(.*?)<\/h1>/, "")).gsub(/\r/, " ").gsub(/\n/, " ").truncate(500, separator: ".", omission: ".")
    = link_to url, class: "nowrap" do
      Keep reading
      = icon("fas", "caret-right")

.broadcast-by= render "blog/author_and_category", broadcast: broadcast
