- @title = @category.name

- content_for :header, @title
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "Categories", categories_path
    %li= @category.name
    %li= render "layouts/breadcrumb_edit_delete_dropdown", edit_url: edit_category_path(@category), delete_url: @category, delete_confirmation: "Delete #{@category.name}?"
- content_for :sidebar, render("admin/sidebar")

.dashboard-container
  = render "forms/horizontal/show/text", object: @category, key: :name
  = render "forms/horizontal/show/text", object: @category, key: :slug
  = render "forms/horizontal/show/check_box", object: @category, key: :announcement
