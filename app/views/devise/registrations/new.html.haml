- @title = "Join Research Community"

- render "themes/seasonal"
- @footer = "dark"

.page-box.last-box.d-flex.align-items-center.theme-bg{ class: "theme-#{@theme}-focus-bg" }
  .container
    %p.lead.text-center.text-white Join our community.

    .sign-up-form
