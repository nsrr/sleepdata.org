- @title = @page.title

- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown", edit_url: edit_admin_page_path(@page), delete_url: admin_page_path(@page), delete_confirmation: "Delete \"#{@page.title}\"?"
  = @title
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "pages", admin_pages_path
    %li.breadcrumb-muted= @page.slug
- content_for :sidebar, render("admin/sidebar")

= render "forms/horizontal/show/text", object: @page, key: :title
= render "forms/horizontal/show/markdown", object: @page, key: :description
