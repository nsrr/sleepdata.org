- @title = @faq.question

- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown", edit_url: edit_admin_faq_path(@faq), delete_url: admin_faq_path(@faq), delete_confirmation: "Delete \"#{@faq.question}\"?"
  = @title
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "faqs", admin_faqs_path
    %li.breadcrumb-muted= @faq.question.downcase
- content_for :sidebar, render("admin/sidebar")

= render "forms/horizontal/show/text", object: @faq, key: :question
= render "forms/horizontal/show/markdown", object: @faq, key: :answer
= render "forms/horizontal/show/text", object: @faq, key: :position
= render "forms/horizontal/show/check_box", object: @faq, key: :displayed
