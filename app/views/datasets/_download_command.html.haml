- @current_folder = @dataset.find_file_folder(params[:path])
- @local_folder = [@dataset.slug, @current_folder].compact.join("/").gsub(/\/$/, "")
- @local_folder_has_spaces = !@local_folder.match(/\s/).nil?
- @local_folder = "\"#{@local_folder}\"" if @local_folder_has_spaces

.code-container
  %span.code-command-blank
    = link_to "#", data: { object: "suppress-click", clipboard_text: "nsrr download #{@local_folder}", placement: "bottom", container: "body", title: "Copied!", trigger: "manual" }, style: "text-decoration: none" do
      = icon("fas", "paste")
    nsrr download
    = @local_folder

.card.mx-auto.text-center{ style: "max-width: 30rem;" }
  %h4.card-header
    Don't have the NSRR gem?
  .card-body
    Install using our
    = succeed "." do
      = link_to "NSRR Gem Installation Instructions", "https://github.com/nsrr/nsrr-gem/blob/master/README.md#prerequisites"
